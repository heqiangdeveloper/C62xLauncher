<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132px"
    android:layout_height="186px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvItemWeatherWeekDay"
        android:text="周一"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22px"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ivItemWeatherType"
        android:layout_width="60px"
        android:layout_height="60px"
        android:src="@drawable/card_weather_sunshine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="41px"
        />

    <TextView
        android:id="@+id/tvItemWeatherWord"
        android:layout_width="wrap_content"
        android:layout_height="42px"
        android:textSize="28px"
        android:textColor="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/ivItemWeatherType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3px"
        />

    <TextView
        android:id="@+id/tvItemWeatherTemperatureDesc"
        android:layout_width="wrap_content"
        android:layout_height="30px"
        android:textSize="22px"
        android:textColor="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvItemWeatherWord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>