<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="212px"
    android:layout_height="274px"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivIqutingSongItemCover"
        android:layout_width="196px"
        android:layout_height="196px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10px"

        />

    <ImageView
        android:id="@+id/ivIqutingSongTag"
        android:src="@drawable/card_iquting_icon_tag_qq"
        android:layout_width="36px"
        android:layout_height="36px"
        app:layout_constraintTop_toTopOf="@id/ivIqutingSongItemCover"
        app:layout_constraintEnd_toEndOf="@id/ivIqutingSongItemCover"
        android:layout_marginTop="12px"

        />
    <ImageView
        android:id="@+id/ivIqutingSongVip"
        android:src="@drawable/card_iquting_icon_vip"
        android:layout_width="53px"
        android:layout_height="22px"
        app:layout_constraintTop_toTopOf="@id/ivIqutingSongItemCover"
        app:layout_constraintStart_toStartOf="@id/ivIqutingSongItemCover"
        android:layout_marginTop="19px"
        android:layout_marginStart="19px"
        />


    <ImageView
        android:id="@+id/ivIqutingSongItemPlayBtn"
        android:src="@drawable/card_iquting_icon_circle_play"
        android:layout_width="44px"
        android:layout_height="44px"
        android:background="@drawable/card_iquting_icon_circle_bg"
        app:layout_constraintBottom_toBottomOf="@id/ivIqutingSongItemCover"
        app:layout_constraintStart_toStartOf="@id/ivIqutingSongItemCover"
        android:layout_marginBottom="12px"
        android:layout_marginStart="12px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46px"
        android:text="给我一首歌..."
        style="@style/CardLv3TextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ivIqutingSongItemCover"
        android:layout_marginStart="6px"
        android:layout_marginTop="13px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>