<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tip_home_card"
        style="@style/CardLv2TextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="33px"
        android:layout_marginStart="62px"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvCardEditorSelect"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:overScrollMode="never"
        android:layout_marginTop="16px"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="210px"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvCardEditorUnselect"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:overScrollMode="never"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rcvCardEditorSelect"
        android:layout_marginStart="189px"
        android:layout_marginTop="25px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_can_drag_tip"
        style="@style/CardLv2TextView"
        android:textSize="20px"
        android:textColor="@color/card_grey_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="126px"
        />

    <Button
        android:id="@+id/btnCardEditorOk"
        android:text="@string/btn_finish"
        style="@style/CardLv3TextView"
        android:layout_width="@dimen/card_edit_btn_width"
        android:layout_height="@dimen/card_edit_btn_height"
        android:background="@drawable/card_common_button_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46px"
        android:layout_marginStart="697px"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btnCardEditorCancel"
        android:text="@string/btn_cancel"
        style="@style/CardLv3TextView"
        android:textColor="@color/card_blue_default"
        android:layout_width="@dimen/card_edit_btn_width"
        android:layout_height="@dimen/card_edit_btn_height"
        android:background="@drawable/card_common_button_secondary_selector"
        app:layout_constraintStart_toEndOf="@id/btnCardEditorOk"
        app:layout_constraintBottom_toBottomOf="@id/btnCardEditorOk"
        android:layout_marginStart="70px"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>