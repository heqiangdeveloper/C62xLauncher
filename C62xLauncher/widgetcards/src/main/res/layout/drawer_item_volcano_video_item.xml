<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/ivDrawerVolcanoSourceIcon"
        android:layout_width="52px"
        android:layout_height="52px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18px"
        />
    <TextView
        android:id="@+id/tvDrawerVolcanoVideoTitle"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        style="@style/CardLv4TextView"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/ivDrawerVolcanoSourceIcon"
        app:layout_constraintEnd_toStartOf="@id/ivDrawerVolcanoPlayIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12px"
        android:layout_marginEnd="19px"
        />
    <ImageView
        android:id="@+id/ivDrawerVolcanoPlayIcon"
        android:src="@drawable/drawer_icon_volcano_video_play"
        android:layout_width="44px"
        android:layout_height="44px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:layout_marginStart="8px"
        android:layout_marginEnd="8px"
        android:background="@drawable/drawer_app_fg_selector"
        />

</androidx.constraintlayout.widget.ConstraintLayout>