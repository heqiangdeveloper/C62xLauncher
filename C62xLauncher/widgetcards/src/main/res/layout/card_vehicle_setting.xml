<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="458px"
        android:layout_height="353px"
        android:src="@drawable/card_vehicle_setting_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="11px"
        android:layout_marginTop="104px"
        />

    <ImageView
        android:id="@+id/ivVehicleSettingOpenWindow"
        android:layout_width="@dimen/card_icon_size_lv1"
        android:layout_height="@dimen/card_icon_size_lv1"
        android:src="@drawable/btn_vehicle_setting_open_window_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="132px"
        android:layout_marginBottom="35px"
        />
    <ImageView
        android:id="@+id/ivVehicleSettingCloseWindow"
        android:layout_width="@dimen/card_icon_size_lv1"
        android:layout_height="@dimen/card_icon_size_lv1"
        android:src="@drawable/btn_vehicle_setting_close_window_selector"
        app:layout_constraintStart_toEndOf="@id/ivVehicleSettingOpenWindow"
        app:layout_constraintTop_toTopOf="@id/ivVehicleSettingOpenWindow"
        android:layout_marginStart="64px"
        />
</androidx.constraintlayout.widget.ConstraintLayout>