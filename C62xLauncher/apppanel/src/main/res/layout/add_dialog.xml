<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="650dp"
    android:orientation="vertical"
    android:background="@mipmap/add_dialog_bg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/add_dialog_title"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:text="标题"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:id="@+id/add_recyclerview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginLeft="50dp"
        android:scrollbars="vertical"
        android:layout_marginRight="50dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_dialog_positive_tv"
            android:layout_width="228dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_positive_selector"
            android:text="@string/add_dialog_positive"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/add_dialog_negative_tv"
            android:layout_width="228dp"
            android:layout_height="74dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/negative_choice_bg"
            android:text="@string/add_dialog_negative"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="#ABD3E1"/>
    </LinearLayout>
</LinearLayout>