<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/all_app_bg"
    android:orientation="vertical">

    <!--ui界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--导航栏-->
        <LinearLayout
            android:id="@+id/nav_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/my_app_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的应用" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/my_app_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/choice_bg" />

            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/app_store_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="应用商城" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/app_store_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/choice_bg" />

            </FrameLayout>

        </LinearLayout>

        <!--内容区-->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5px" />

    </LinearLayout>

    <ImageView
        android:id="@+id/apppanel_close"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/close" />

</RelativeLayout>