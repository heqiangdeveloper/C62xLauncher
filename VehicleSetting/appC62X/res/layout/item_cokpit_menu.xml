<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tab_main_bg_selector"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_tab"
        android:layout_width="52dip"
        android:layout_height="52dip"
        android:src="@drawable/tab_cokpit_seat_selector" />

    <TextView
        android:id="@+id/txt_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="@string/cockpit_title_name_conditioner"
        android:textColor="@drawable/tab_main_txt_selector"
        android:textSize="32sp" />

</LinearLayout>
