<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <shape>
            <solid android:color="#b3ecbc" />
            <corners android:radius="50px" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape>
            <gradient android:endColor="@color/tab_color_bg" android:startColor="@color/tab_color_bg" android:type="linear" />
            <corners android:radius="50px" />
            <stroke android:width="1.5dp" android:color="#F0F0F0" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient android:endColor="@color/tcv_radio_select_end_color" android:startColor="@color/tcv_radio_select_start_color" android:type="linear" />
            <corners android:radius="50px" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@color/tab_color_bg" android:startColor="@color/tab_color_bg" android:type="linear" />
            <corners android:radius="50px" />
            <stroke android:width="1.5dp" android:color="@color/tab_color_bg" />
        </shape>
    </item>
</selector>