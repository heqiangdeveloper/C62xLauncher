<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/x370"
        android:layout_height="@dimen/x244"
        android:background="@drawable/bg_large"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/details_title"
            style="@style/dialog_title"
            android:text="@string/drive_close_brake"
            android:visibility="gone" />


        <ScrollView
            android:id="@+id/hint_content_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginRight="@dimen/x10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_content"
                style="@style/txt_prompt_style"
                android:layout_width="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/x2"
                android:padding="@dimen/x20"
                android:text="@string/global_txt_close"
                android:textSize="@dimen/text_15" />
        </ScrollView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hint_conform"
            android:layout_width="@dimen/x114"
            android:layout_height="@dimen/x37"
            android:layout_marginTop="@dimen/x45"
            android:background="@drawable/lighting_dialog_txt_bg"
            android:gravity="center"
            android:text="@string/global_txt_agree"
            android:textColor="@color/xui_config_color_white"
            android:textSize="@dimen/text_14" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>