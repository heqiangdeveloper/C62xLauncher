<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/x15"
        android:paddingTop="@dimen/x15"
        android:paddingEnd="@dimen/x15">

        <RelativeLayout
            android:layout_width="@dimen/x243"
            android:layout_height="@dimen/x160"
            android:background="@drawable/drive_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sla_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x12"
                android:layout_marginTop="@dimen/x12"
                android:text="@string/drive_sla_title"
                android:textColor="@color/xui_config_color_white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sla_tx"
                android:layout_marginStart="@dimen/x12"
                android:layout_marginTop="@dimen/x8"
                android:text="@string/drive_sla_content"
                android:textColor="@color/xui_config_color_white"
                android:textSize="@dimen/text_9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginEnd="@dimen/x4"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/drive_close"
                    android:textColor="@color/text_open"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:background="@drawable/icon_arrow_right_48_pre" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_hma" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>