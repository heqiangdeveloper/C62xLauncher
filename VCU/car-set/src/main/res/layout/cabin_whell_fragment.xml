<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/x365"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x15">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x95"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x10"
                android:text="@string/cabin_wheel_electronic_mode"
                android:textColor="@color/tab_option_title_text_color"
                android:textSize="@dimen/tab_option_title_text_size" />

            <com.common.xui.widget.tabbar.TabControlView
                android:id="@+id/cabin_ac_comfort_option"
                style="@style/tdv_common_style"
                app:layout_constraintTop_toTopOf="parent"
                app:tcv_defaultSelection="1"
                app:tcv_items="@array/cabin_wheel_mode_options" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabin_whell_press_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/switch_item_option_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1">

            <TextView
                style="@style/switch_row_option_style"
                android:text="@string/cabin_wheel_press_key"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cabin_whell_click_tv"
                    style="@style/click_row_option_style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/cabin_wheel_press_key_tv" />

                <ImageView
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:background="@drawable/list_item_right_selector" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line2"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cabin_whell_press_key" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabin_whell_automatic_heating"
            android:layout_width="match_parent"
            android:layout_height="@dimen/switch_item_option_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2">

            <TextView
                style="@style/switch_row_option_style"
                android:text="@string/cabin_wheel_automatic_heating"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cabin_whell_automatic_heating_tv"
                    style="@style/click_row_option_style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/cabin_wheel_automatic_heating_tv" />

                <ImageView
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:background="@drawable/list_item_right_selector" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line3"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cabin_whell_automatic_heating" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>