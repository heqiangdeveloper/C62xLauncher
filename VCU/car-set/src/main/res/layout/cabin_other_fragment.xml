<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/x365"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabin_other_trailer_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/switch_item_option_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/switch_row_option_style"
                android:text="@string/cabin_other_trailer_remind"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cabin_whell_click_tv"
                    style="@style/click_row_option_style"
                    android:layout_gravity="center_vertical"
                    android:text="@string/cabin_other_close" />

                <ImageView
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:background="@drawable/list_item_right_selector" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cabin_other_trailer_remind" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabin_other_battery_optimization"
            android:layout_width="match_parent"
            android:layout_height="@dimen/switch_item_option_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1">

            <TextView
                style="@style/switch_row_option_style"
                android:text="@string/cabin_other_battery_optimization"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.common.xui.widget.button.switchbutton.SwitchButton
                style="@style/switch_button_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line2"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cabin_other_battery_optimization" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cabin_other_wireless_charging"
            android:layout_width="match_parent"
            android:layout_height="@dimen/switch_item_option_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2">

            <TextView
                style="@style/switch_row_option_style"
                android:text="@string/cabin_other_wireless_charging"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.common.xui.widget.button.switchbutton.SwitchButton
                style="@style/switch_button_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line3"
            style="@style/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cabin_other_wireless_charging" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>