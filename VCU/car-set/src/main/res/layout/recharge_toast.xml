<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_relative"
    android:layout_width="@dimen/x148"
    android:layout_height="@dimen/x32"
    android:background="@drawable/bg_charging_label">

    <LinearLayout
        android:id="@+id/toast_linear"
        android:layout_width="@dimen/x148"
        android:layout_height="@dimen/x32"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x11"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_wireless_charge_48" />

        <TextView
            android:id="@+id/toast_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cabin_other_wireless_charging_working_properly"
            android:textColor="@color/tab_option_title_text_color"
            android:textSize="@dimen/toast_text_size" />
    </LinearLayout>
</RelativeLayout>


