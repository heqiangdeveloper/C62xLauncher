    <!-- 当前进度的颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/seekbar_bg_radius" />
                <stroke
                    android:width="1px"
                    android:color="@color/seekbar_stroke_color" />
                <gradient
                    android:angle="180"
                    android:startColor="@color/seekbar_start_color"
                    android:endColor="@color/seekbar_end_color"></gradient>
            </shape>
        </clip>
    </item>
</layer-list>