<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 总进度的颜色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/seekbar_bg_radius" />
            <stroke
                android:color="#242B3B"
                android:width="1px" />
            <gradient
                android:angle="180"
                android:startColor="#1D2B3F"
                android:centerColor="#1A1F31"
                android:endColor="#1D2B3F" />
        </shape>
    </item>
