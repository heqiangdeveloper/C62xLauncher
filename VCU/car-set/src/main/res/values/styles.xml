<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="XUITheme.Tablet.Big">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <!--        <item name="android:listDivider">@drawable/list_divider</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="onClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="switch_row_option_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
    </style>

    <style name="txt_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
    </style>

    <style name="txt_prompt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
    </style>

    <style name="switch_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="swb_animationDuration">200</item>
        <item name="swb_backDrawable">@drawable/switch_track_selector</item>
        <item name="swb_thumbDrawable">@drawable/switch_thumb_selector</item>
    </style>

    <style name="click_row_option_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
        <item name="android:textColor">@color/click_text_color</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@drawable/list_divider_line</item>
    </style>

    <style name="txt_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tab_option_title_text_size</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
    </style>

    <style name="pop_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
    </style>

    <style name="txt_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/text_prompt_color</item>
        <item name="android:layout_marginTop">@dimen/x2</item>
    </style>

    <style name="pop_txt_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/pop_text_prompt_color</item>
        <item name="android:layout_marginTop">@dimen/x2</item>
    </style>

    <style name="image_prompt">
        <item name="android:layout_width">@dimen/x16</item>
        <item name="android:layout_height">@dimen/x16</item>
        <item name="android:src">@drawable/icon_information_32</item>
        <item name="android:layout_marginStart">@dimen/x5</item>
    </style>

    <style name="lighting_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="install_dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x45</item>
        <item name="android:layout_marginLeft">@dimen/x45</item>
        <item name="android:layout_marginRight">@dimen/x45</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="model_txt_dialog">
        <item name="android:layout_width">@dimen/x114</item>
        <item name="android:layout_height">@dimen/x37</item>
        <item name="android:background">@drawable/lighting_dialog_txt_bg</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_option_title_text_color</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="close_dialog">
        <item name="android:layout_width">@dimen/x28</item>
        <item name="android:layout_height">@dimen/x28</item>
        <item name="android:src">@drawable/close_56_white</item>
        <item name="android:layout_marginLeft">@dimen/x15</item>
    </style>

    <style name="constraintLayout">
        <item name="android:layout_width">@dimen/x365</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
    </style>
</resources>
